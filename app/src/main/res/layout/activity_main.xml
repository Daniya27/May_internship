<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_image"
        android:src="@drawable/login_vector"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/main_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_image"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/artifika"
        android:text="Welcome Back!"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/main_please_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_welcome"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/artifika"
        android:text="Please Log into your existing account"
        android:textColor="@color/white_transparent_70"
        android:textSize="16dp"
        />

    <EditText
        android:padding="15dp"
        android:background="@drawable/custom_border"
        android:fontFamily="@font/artifika"
        android:id="@+id/main_email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white_transparent_70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white_transparent_80"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/main_please_login"
        android:hint="Your Email"
        android:textSize="18dp"
        />
    <EditText
        android:padding="15dp"
        android:background="@drawable/custom_border"
        android:fontFamily="@font/artifika"
        android:id="@+id/main_password"
        android:inputType="textPassword"
        android:textColorHint="@color/white_transparent_70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white_transparent_80"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/main_email"
        android:hint="Your Password"
        android:textSize="18dp"
        />
    <Button
        android:backgroundTint="@color/green"
        android:fontFamily="@font/artifika"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_password"
        android:text="Login"
        android:textSize="20dp"
        android:textStyle="bold"/>
</RelativeLayout>