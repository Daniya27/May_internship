<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MayInternship" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/artifika</item>
    </style>

    <style name="Theme.MayInternship" parent="Base.Theme.MayInternship" />

    <style name="text_white_bold_18" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_white_trans_16" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_transparent_70</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="edit_white_trans" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white_transparent_80</item>
        <item name="android:textColorHint">@color/white_transparent_70</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>
    
    <style name="button_green_bold_16" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>